{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "http://localhost:8080/",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "*://*/*"
  ],
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "96": "icon.svg",
    "128": "icon.svg"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icon.svg",
      "38": "icon.svg"
    }
  },
  "web_accessible_resources": [
    "img/*",
    "warning.html",
    "guide.html"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "websecassistant@xenolith.se"
    }
  }
}
